<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="todolist-api" version="3.0">
	<display-name>todolist</display-name>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>todolist</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>authcheck</servlet-name>
		<servlet-class>net.etalia.crepuscolo.auth.AuthCheckServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>todolist</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>authcheck</servlet-name>
		<url-pattern>/authcheck</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>charsetFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>JSONParametersFilter</filter-name>
		<filter-class>net.etalia.jalia.spring.JaliaParametersFilter</filter-class>
		<init-param>
			<param-name>parameterName</param-name>
			<param-value>outProperties</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>authFilter</filter-name>
		<filter-class>net.etalia.crepuscolo.auth.AuthFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>charsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>JSONParametersFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>authFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>